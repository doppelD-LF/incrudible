{% extends('base.html.twig') %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-12">
                <h2>All Posts </h2>
            </div>
            <div class="col-sm-2 col-12">
                <a href="{{ path('post.create')}}" button type="button" class="btn btn bg-primary float-sm-right"> Create Post </a>
            </div>
        </div>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}">
                        {{ post.title }}
                    </a>
                </td>
                <td>
                    <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">
                    Delete 
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}